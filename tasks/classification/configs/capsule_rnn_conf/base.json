{
    "model_config": {
        "model_type": "EncoderRNN",
        "args" : {
            "dim_input": 200,
            "dim_hidden": 128,
            "n_label": 2,
            "n_layers": 3,
            "bidirectional": true,
            "rnn_type": "LSTM",
            "cell_drop_out_rate": 0.2, 
            "embed_drop_out_rate": 0.2,
            "final_drop_out_rate": 0.2,
            "embedding_strategy": "word2vec",
            "pretrained_path": "glove-twitter-200",
            "embedding_frozen": false,
            "oov_handling": "average_context"
        }
    },
   "tokenizer_config": {
        "tokenizer_type": "nltk",
        "args": {
            "dataset": "rotten_tomatoes"
        }
    },
    "trainer_args": {
        "task": "classification",
        "training_batch_size": 128,
        "validation_batch_size": 128,
        "epoch": 100,
        "metric_log_interval": 1000,
        "eval_interval": 1000,
        "learning_rate": 0.0001,
        "save_model": false
    }, 
    "metric_config": {
        "metrics": [
            {"name": "accuracy", "args": {}},
            {"name": "f1", "args": {}},
            {"name": "precision", "args": {}},
            {"name": "recall", "args": {}}
        ]
    },
    "data_config": {
        "name": "rotten_tomatoes",
        "is_huggingface": true,
        "type": "classification"
    },
    "analysis_config": {
        "output_dir": "output/base_rnn_capsule",
        "record_metrics": true,
        "record_gradients": true,
        "save_interval": 1000
    }
}